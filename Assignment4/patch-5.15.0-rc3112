+struct a_node
+{
+	unsigned long dev_random; //to store number
+	char allocated; //to check if var is allocated
+	struct a_node *next;
+};
+typedef struct a_node a_node;
+#define QSIZE 16
+static a_node *k_mqueue;
+static a_node *head;
+static a_node *tail;
+static char initialized = 0x0;
+DEFINE_MUTEX(a_lock);
