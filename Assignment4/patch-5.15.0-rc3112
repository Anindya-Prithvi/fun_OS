+SYSCALL_DEFINE1(writer, unsigned long, input)
+{
+	int itr, retval;
+	mutex_lock(&a_lock);
+	if (initialized == 0)
+	{
+		k_mqueue = kmalloc(sizeof(a_node)*QSIZE, GFP_KERNEL);
+		for(itr = 0; itr<QSIZE; ++itr)
+		{
+			(k_mqueue+itr)->allocated = 0;
+			(k_mqueue+itr)->next = (k_mqueue + (itr+1)%QSIZE);
+		}
+		initialized = 1;
+		head = k_mqueue;
+		tail = k_mqueue;
+	}
+	if (initialized == 1)
+	{
+		if(tail->allocated ==1) retval = -EAGAIN; //may change (MSG Q full)
+		else
+		{
+			tail->allocated = 1;
+			tail->dev_random = input;
+			tail = tail->next;
+			retval = 0; //success
+		}
+	}
+	else
+	{
+		//Weird error
+		printk(KERN_INFO "Weird error occured\n");
+		retval = -EPERM;
+	}
+	mutex_unlock(&a_lock); //can never dedloc
+	return retval;
+}
+
+SYSCALL_DEFINE0(reader)
+{
+	unsigned long temp;
+	int retval;
+	mutex_lock(&a_lock);
+	if(initialized==0) retval = -EAGAIN; //add to queue //or resource unav.
+	if(initialized==1)
+	{
+		if(head->allocated==0) retval = -EAGAIN;//everything has been already read
+		else
+		{
+			head->allocated = 0;
+			temp = head->dev_random;
+			head = head->next;
+			retval = 0;
+		}
+	}
+	else
+	{
+		//weird error again
+		printk(KERN_INFO "Weird reading error\n");
+		retval = -EPERM;
+	}
+	mutex_unlock(&a_lock);
+	if(retval==0) return temp;
+	else return retval;
+}
